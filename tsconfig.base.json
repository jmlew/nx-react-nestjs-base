{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api-configs/*": ["libs/api-configs/src/lib/*"],
      "@custom-types": ["./types/index.ts"],
      "@example-app/alert/feature": ["libs/alert/feature/src/index.ts"],
      "@example-app/alert/ui": ["libs/alert/ui/src/index.ts"],
      "@example-app/form/feature": ["libs/form/feature/src/index.ts"],
      "@example-app/home/feature": ["libs/home/feature/src/index.ts"],
      "@example-app/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@example-app/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@example-app/shared/util": ["libs/shared/util/src/index.ts"],
      "@example-app/shell/ui": ["libs/shell/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
